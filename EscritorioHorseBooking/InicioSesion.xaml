<Window x:Class="EscritorioHorseBooking.InicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EscritorioHorseBooking"
        mc:Ignorable="d"
        Title="InicioSesion" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="email" Width="150" Height="30" VerticalAlignment="Top"
                 Margin="20,20,20,20" VerticalContentAlignment="Center" Text="Email"
                 Foreground="LightGray" Padding="2" GotFocus="email_GotFocus"
                 LostFocus="email_LostFocus"/>

        <TextBox x:Name="contrasena" Width="150" Height="30" VerticalAlignment="Top"
                 Margin="20,80,20,20" VerticalContentAlignment="Center" Text="Contraseña"
                 Foreground="#D3D3D3" Padding="2" GotFocus="email_GotFocus"
                 LostFocus="email_LostFocus"/>
        
        <Button x:Name="buttonIniciarSesion" Content="Iniciar sesión"
                Width="100" Height="50" Click="buttonIniciarSesion_Click"/>
    </Grid>
</Window>
